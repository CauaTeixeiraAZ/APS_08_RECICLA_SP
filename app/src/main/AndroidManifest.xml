        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAYPxLJMubUCQbm7udi3sjIw2SQqij6RyU" />

        <activity
            android:name=".ui.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar">

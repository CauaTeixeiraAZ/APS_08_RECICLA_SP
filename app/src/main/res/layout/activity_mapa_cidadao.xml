<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cidadao.MapaCidadaoActivity">

    <!-- Conteúdo Principal -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- AppBar com Pesquisa -->
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green_primary"
            android:elevation="4dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/green_primary"
                app:title="Pontos de Coleta"
                app:titleTextColor="@color/white"
                app:navigationIcon="@android:drawable/ic_menu_sort_by_size"/>

            <!-- Barra de Pesquisa -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@color/green_primary">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="2dp"
                    android:layout_marginEnd="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp"
                        android:background="@color/white">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_menu_search"
                            android:padding="8dp"
                            app:tint="@color/gray_medium"/>

                        <EditText
                            android:id="@+id/etPesquisa"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:hint="Pesquisar pontos..."
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/gray_medium"
                            android:background="@android:color/transparent"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:inputType="text"/>

                        <ImageButton
                            android:id="@+id/btnLimparPesquisa"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_menu_close_clear_cancel"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:visibility="gone"
                            app:tint="@color/gray_medium"
                            android:contentDescription="Limpar pesquisa"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Botão de Filtros -->
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabFiltros"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_preferences"
                    app:fabSize="mini"
                    app:tint="@color/green_dark"
                    app:backgroundTint="@color/white"
                    android:contentDescription="Filtros"/>

            </LinearLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <!-- Mapa -->
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

        <!-- Bottom Sheet de Filtros -->
        <LinearLayout
            android:id="@+id/bottomSheetFiltros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="16dp"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            app:behavior_peekHeight="0dp"
            app:behavior_hideable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filtrar por Material"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupFiltros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="false">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipTodos"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Todos"
                    android:checked="true"
                    app:chipBackgroundColor="@color/green_light"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipPlastico"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plástico"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipPapel"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Papel"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipVidro"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vidro"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipMetal"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Metal"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipEletronicos"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eletrônicos"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipOrganico"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Orgânico"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipMadeira"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Madeira"/>

            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>

        <!-- FAB Adicionar Ponto -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabSugerirPonto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:contentDescription="Sugerir novo ponto"
            app:srcCompat="@android:drawable/ic_input_add"
            app:backgroundTint="@color/green_primary"
            app:tint="@color/white"/>

        <!-- FAB Minha Localização -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabMinhaLocalizacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="88dp"
            android:contentDescription="Minha localização"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/ic_menu_mylocation"
            app:backgroundTint="@color/white"
            app:tint="@color/green_dark"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Menu Lateral (Navigation Drawer) -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/menu_drawer"
        app:itemIconTint="@color/green_dark"
        app:itemTextColor="@color/text_primary"/>

</androidx.drawerlayout.widget.DrawerLayout>
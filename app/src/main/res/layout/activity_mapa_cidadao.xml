<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cidadao.MapaCidadaoActivity">

    <!-- Mapa -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Card de Filtros -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/chipContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipTodos"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/todos"
                    android:checked="true"
                    android:layout_marginEnd="8dp"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipPlastico"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pl_stico"
                    android:layout_marginEnd="8dp"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipPapel"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/papel"
                    android:layout_marginEnd="8dp"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipVidro"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vidro"
                    android:layout_marginEnd="8dp"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipMetal"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/metal"
                    android:layout_marginEnd="8dp"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipEletronicos"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/eletr_nicos"/>

            </LinearLayout>

        </HorizontalScrollView>

    </com.google.android.material.card.MaterialCardView>

    <!-- FAB para sugerir novo ponto -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSugerirPonto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="16dp"
        android:contentDescription="@string/sugerir_novo_ponto"
        app:srcCompat="@android:drawable/ic_input_add" />

    <!-- FAB para localização atual -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMinhaLocalizacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="88dp"
        android:contentDescription="@string/minha_localiza_o"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_menu_mylocation" />

    <!-- FAB Admin (só aparece para admins) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdmin"
        android:layout_width="144dp"
        android:layout_height="137dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="160dp"
        android:contentDescription="@string/painel_admin"
        android:visibility="gone"
        app:backgroundTint="#FF9800"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_menu_manage" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
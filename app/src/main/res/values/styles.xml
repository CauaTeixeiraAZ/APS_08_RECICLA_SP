<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo para TextInputLayout -->
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/green_primary</item>
        <item name="hintTextColor">@color/green_primary</item>
        <item name="android:textColorHint">@color/gray_medium</item>
    </style>

    <!-- Estilo para Botões Primários -->
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/green_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Estilo para Botões Secundários -->
    <style name="CustomButtonOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/green_primary</item>
        <item name="android:textColor">@color/green_primary</item>
        <item name="cornerRadius">8dp</item>
    </style>
</resources>